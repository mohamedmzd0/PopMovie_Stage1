    package="com.example.mohamedabdelaziz.popmovie_stage1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PopMovie"
            android:configChanges="keyboardHidden|orientation|screenSize|touchscreen|navigation|smallestScreenSize|layoutDirection|fontScale|density|keyboard|locale|mcc|mnc|screenLayout|uiMode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".detail_activity"></activity>
    </application>

</manifest>